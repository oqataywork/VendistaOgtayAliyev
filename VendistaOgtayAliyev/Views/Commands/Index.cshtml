
@{
    ViewData["CommandType"] = "Типы Команды";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<body>
<div>
        <div class="home-container">
            <div class="home-header">
                <span class="home-text">Отправка команды на терминал</span>
            </div>
            <div class="home-main-container">
                <div class="home-container1">
                    <div class="home-right">
                        <div class="home-container2">
                            <span class="home-text01">
                                <span> Команда</span>
                                <br />
                            </span>
                        </div>
                        <select class="home-select">
                            @foreach (var commandType in ViewData["CommandTypes"] as List<DataApiService.Models.CommandType>)
                            {
                                <option value="@commandType.Name">@commandType.Name</option>
                            }
                        </select>
                    </div>
                    <div class="home-left">
                        <div class="home-container3">
                            <span class="home-text04">
                                <span>ID Терминал(ов)</span>
                                <br />
                            </span>
                        </div>
                        <textarea placeholder="placeholder"
                                  class="home-textarea textarea"></textarea>
                    </div>
                    <div class="home-container4">
                        <div class="home-container5">
                            <button type="button" class="home-button button">Назад</button>
                        </div>
                        <div class="home-container6">
                            <button type="button" class="home-button1 button">
                                <span>
                                    <span>Отправить</span>
                                    <br />
                                </span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="home-table-container">
                <div style="width:100%; overflow-x: auto;">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Дата и время</th>
                            <th>Команда</th>
                            <th>Параметр 1</th>
                            <th>Параметр 2</th>
                            <th>Параметр 3</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>2021</td>
                            <td>Стоять</td>
                            <td>null</td>
                            <td>salam</td>
                            <td>aleykum</td>
                            <td>normalni</td>
                        </tr>
                    </tbody>
                 </table>
                </div>
            </div>
        </div>
    </div>
</body>


@section Scripts {
    <script>
        $(function () {
            new DataTable('.table', {
                info: false,
                paging: false,
                autoWidth: false,
                searching: false,
                scrollX: false
            });
        });
    </script>
}
